generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- TABEL WAJIB NEXT-AUTH (Jangan diubah nama kolomnya) ---

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?  @db.Text
  access_token       String?  @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?  @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  role          String    @default("FREE") // FREE, PRO, ELITE
  accounts      Account[]
  sessions      Session[]
  
  // Relasi ke Kalkulator kita kemarin
  calcHistory   CalculatorHistory[]
  biodata           Biodata?
  enrollments   Enrollment[]
  certificates  Certificate[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// --- TABEL FITUR KITA ---

model CalculatorHistory {
  id        Int      @id @default(autoincrement())
  userId    String?
  gpa       Float
  mandarin  Int
  savings   Float
  result    Int
  createdAt DateTime @default(now())
  user      User?    @relation(fields: [userId], references: [id])
}
model Biodata {
  id        String   @id @default(cuid())
  userId    String   @unique // Satu user satu biodata
  fullName  String
  gender    String
  birthDate String
  height    Int      // Penting di Taiwan
  weight    Int      // Penting di Taiwan
  religion  String   // Penting (soal makanan halal/tidak)
  status    String   // Menikah/Single
  education String
  mandarin  String   // Level Mandarin
  skill     String   // Las, Masak, Jaga Anak, dll
  phone     String
  user      User     @relation(fields: [userId], references: [id])
}

// KURSUS (Materi Belajar)
model Course {
  id          String   @id @default(cuid())
  title       String
  description String
  category    String   // "Student" atau "Worker"
  thumbnail   String?  // URL Gambar
  lessons     Lesson[]
  enrollments Enrollment[]
}

// ISI MATERI
model Lesson {
  id        String   @id @default(cuid())
  title     String
  content   String   // Bisa text atau link video
  courseId  String
  course    Course   @relation(fields: [courseId], references: [id])
}

// PROGRESS USER (Siapa ambil kelas apa)
model Enrollment {
  id        String   @id @default(cuid())
  userId    String
  courseId  String
  progress  Int      @default(0) // 0 - 100%
  user      User     @relation(fields: [userId], references: [id])
  course    Course   @relation(fields: [courseId], references: [id])

  @@unique([userId, courseId]) // Satu user gak bisa ambil kelas yg sama 2x
}

// SERTIFIKAT (Hasil Akhir)
model Certificate {
  id        String   @id @default(cuid()) // Ini jadi ID Unik Sertifikat
  userId    String
  courseId  String
  issuedAt  DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}